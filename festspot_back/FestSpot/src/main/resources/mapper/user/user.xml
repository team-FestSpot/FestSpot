<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.festspot.dev.domain.user.UserMapper">
    <resultMap id="UserMap" type="com.festspot.dev.domain.user.User">
        <id property="userId" column="user_id" />
        <result property="userLoginId" column="use_logi_id" />
        <result property="userPassword" column="user_password" />
        <result property="userEmail" column="user_email" />
        <result property="userNickName" column="user_nickname" />
        <result property="userProfileImgUrl" column="use_profile_img_url" />
        <result property="provider" column="provider" />
        <result property="providerId" column="provider_id" />
        <collection property="userRoles" javaType="list" resultMap="UserRoleMap" />
    </resultMap>
    <resultMap id="UserRoleMap" type="com.festspot.dev.domain.userRole.UserRole">
        <id property="userRoleId" column="user_role_id" />
        <result property="userId" column="urt_user_id" />
        <result property="roleId" column="urt_role_id" />
        <association property="role" resultMap="RoleMap" />
    </resultMap>
    <resultMap id="RoleMap" type="com.festspot.dev.domain.role.Role">
        <id property="roleId" column="role_id" />
        <result property="role" column="role" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
        insert into user_tb
        values (default, #{userLoginId}, #{userPassword}, #{userEmail}, #{userNickName}, #{userProfileImgUrl}, now(), #{provider}, #{providerId})
    </insert>

    <update id="updateProfileImgPathById">
        update user_tb set user_profile_img_url = #{path}
        where
            user_id = #{userId}
    </update>

    <select id="findByUserLoginId" resultType="com.festspot.dev.domain.user.User">
        select
            *
        from
            user_tb
        where
            user_login_id = #{userLoginId}
    </select>
    <select id="findByUserId" resultType="com.festspot.dev.domain.user.User">
        select
            *
        from
            user_tb
        where
            user_id = #{userId}
    </select>



</mapper>