<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.festspot.dev.domain.role.RoleMapper">


    <select id="findById" resultType="com.festspot.dev.domain.role.Role">
        select
            *
        from
            role_tb
        where
            role_id = #{roleId}
    </select>
    <select id="findByRole" resultType="com.festspot.dev.domain.role.Role">
        select
            *
        from
            role_tb
        where
            role = #{role}
    </select>
</mapper>