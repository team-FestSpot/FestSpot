<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.festspot.dev.domain.user.UserMapper">


  <insert id="insert" useGeneratedKeys="true" keyProperty="userId">
    insert into user_tb
    values(default, #{userLoginId}, #{userPassword}, #{userNickName}, #{userEmail}, #{userProfileImgUrl})
  </insert>

  <select id="findByUserLoginId" resultType="com.festspot.dev.domain.user.User">
    select
      *
    from
      user_tb
    where
      user_login_id = #{UserLoginId}
  </select>
  <select id="findByUserId" resultType="com.festspot.dev.domain.user.User">
    select
      *
    from
      user_tb
    where
      user_id = #{userId}
  </select>
</mapper>