<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.festspot.dev.domain.postImg.PostImgMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="postImgId">
        insert into post_img_tb
        values
        <foreach item="img" collection="postImgs" separator=",">
            (default, #{img.postId}, #{img.postImgUrl}, #{img.seq})
        </foreach>
    </insert>
  <select id="findByPostId" resultType="com.festspot.dev.domain.postImg.PostImg">
      select
        *
      from
        post_img_tb
      where
        post_id = #{postId}
  </select>
</mapper>