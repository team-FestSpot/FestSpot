<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.festspot.dev.domain.role.RoleMapper">

  <select id="findById" resultType="com.festspot.dev.domain.role.Role">
    select
      *
    from
      role_tb
    where
      role_id = #{roleId}
  </select>
  <select id="findByRole" resultType="com.festspot.dev.domain.role.Role">
    select
      *
    from
      role_tb
    where
      role = #{role}
  </select>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.festspot.dev.domain.role.RoleMapper">
  <insert
    id="insert"
    useGeneratedKeys="true"
    keyProperty="userRoleId"
  >
    insert into
    user_role_tb
    values
    (default, #{userId}, #{roleId})
  </insert>
  <delete id="deleteByUserId">
    delete from
    user_role_tb
    where
    user_id = #{userId}
  </delete>
  <delete id="deleteByUserIds">
    delete from
    user_role_tb
    where
    user_id in <foreach item="userId" collection="userIds" separator="," open="(" close=")"> #{userId}</foreach>
  </delete>
</mapper>